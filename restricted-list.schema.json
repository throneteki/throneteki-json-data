{
    "additionalProperties": false,
    "definitions": {
        "cardCodeArray": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^[0-9]{5}$"
            }
        },
        "pod": {
            "type": "object",
            "properties": {
                "restricted": {
                    "type": "string",
                    "pattern": "^[0-9]{5}$"
                },
                "cards": {
                    "$ref": "#/definitions/cardCodeArray"
                }
            },
            "required": ["restricted", "cards"]
        },
        "format": {
            "additionalProperties": false,
            "type": "object",
            "properties": {
                "name": {
                    "enum": ["joust", "melee"]
                },
                "restricted": {
                    "$ref": "#/definitions/cardCodeArray"
                },
                "banned": {
                    "$ref": "#/definitions/cardCodeArray"
                },
                "pods": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/pod"
                    }
                }
            },
            "required": ["restricted"]
        }
    },
    "type": "array",
    "items": {
        "properties": {
            "date": {
                "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                "type": "string"
            },
            "formats": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/format"
                }
            },
            "bannedCards": {
                "$ref": "#/definitions/cardCodeArray"
            },
            "version": {
                "type": "string"
            },
            "code": {
                "type": "string"
            },
            "issuer": {
                "enum": [
                    "Fantasy Flight Games",
                    "The Conclave",
                    "Redesigns"
                ]
            },
            "cardSet": {
                "enum": [
                    "original",
                    "redesign"
                ]
            }
        },
        "required": [
            "bannedCards",
            "date",
            "formats",
            "version",
            "issuer",
            "cardSet",
            "code"
        ]
    }
}
