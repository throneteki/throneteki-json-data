{
    "additionalProperties": false,
    "definitions": {
        "cardCode": {
            "pattern": "^[0-9]{5}$",
            "type": "string"
        },
        "intOrX": {
            "anyOf": [
                {
                    "minimum": 0,
                    "type": "integer"
                },
                {
                    "enum": ["X", "-"]
                }
            ]
        },
        "erratum": {
            "type": "object",
            "properties": {
                "issuer": { "enum": ["Fantasy Flight Games", "The Conclave"] },
                "version": { "type": "string", "minLength": 1 },
                "link": { "type": "string", "format": "uri" },
                "text": { "type": "string", "minLength": 1 },
                "notes":  { "type": [ "string", "null" ] }
            },
            "required": ["issuer", "version", "text", "notes"]
        }
    },
    "properties": {
        "code": {
            "$ref": "#/definitions/cardCode"
        },
        "cost": {
            "$ref": "#/definitions/intOrX"
        },
        "deckLimit": {
            "minimum": 1,
            "type": "integer"
        },
        "designer": {
            "minLength": 1,
            "type": "string"
        },
        "faction": {
            "enum": [
                "baratheon",
                "greyjoy",
                "lannister",
                "martell",
                "neutral",
                "stark",
                "targaryen",
                "thenightswatch",
                "tyrell"
            ]
        },
        "flavor": {
            "minLength": 1,
            "type": "string"
        },
        "icons": {
            "properties": {
                "intrigue": {
                    "type": "boolean"
                },
                "military": {
                    "type": "boolean"
                },
                "power": {
                    "type": "boolean"
                }
            },
            "required": ["intrigue", "military", "power"]
        },
        "illustrator": {
            "minLength": 1,
            "type": "string"
        },
        "loyal": {
            "type": "boolean"
        },
        "name": {
            "minLength": 1,
            "type": "string"
        },
        "plotStats": {
            "properties": {
                "claim": {
                    "$ref": "#/definitions/intOrX"
                },
                "income": {
                    "$ref": "#/definitions/intOrX"
                },
                "initiative": {
                    "$ref": "#/definitions/intOrX"
                },
                "reserve": {
                    "$ref": "#/definitions/intOrX"
                }
            },
            "required": ["claim", "income", "initiative", "reserve"]
        },
        "strength": {
            "$ref": "#/definitions/intOrX"
        },
        "traits": {
            "items": {
                "minLength": 1,
                "type": "string"
            },
            "type": "array"
        },
        "text": {
            "type": "string"
        },
        "type": {
            "enum": ["agenda", "attachment", "character", "event", "location", "plot", "title"]
        },
        "unique": {
            "type": "boolean"
        },
        "octgnId": {
            "type": ["string", "null"]
        },
        "quantity": {
            "type": "integer"
        },
        "errata": {
            "items": { "$ref": "#/definitions/erratum" }
        }
    },
    "required": [
        "code",
        "deckLimit",
        "faction",
        "name",
        "text",
        "traits",
        "type",
        "quantity"
    ]
}
